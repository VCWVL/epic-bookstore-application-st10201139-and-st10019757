@model IEnumerable<EpicBookstoreSprint.Models.Books>

@{
    ViewData["Title"] = "Store";
}

<div class="container mt-4">
    <h2 class="mb-4">Explore Our Books</h2>

    <form asp-action="Index" class="col-md-3 my-2 p-2">
        <div class="filter-container mt-4">
            <h5 class="mb-3">Filter Search</h5>

            <div class="mb-3">
                <input type="text" name="searchString" placeholder="Title or Author" class="form-control" />
            </div>

            <div class="d-flex align-items-center mb-3">
                <input type="number" name="minPrice" step="1" placeholder="$Min" class="form-control me-2" />
                <span class="text-muted">—</span>
                <input type="number" name="maxPrice" step="1" placeholder="$Max" class="form-control ms-2" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-sm">Filter</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm btn-clear">Clear</a>
            </div>
        </div>

    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card my-3 store-card">
                    <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)" class="card-img-top card-img-custom" alt="Book Image">
                        <div class="card-body" style="height: 6em;">
                            <h5 class="mb-3">@item.Title</h5>
                        </div>
                        <div class="card-body d-flex justify-content-between">
                            <span class="card-text">@item.Price.ToString("c")</span>
                            <a href="@Url.Action("AddToCart", "Cart", new { id = item.Id })" class="btn btn-primary store-btn"><i class="fa-solid fa-cart-shopping"></i></a>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
