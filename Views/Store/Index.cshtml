@model IEnumerable<EpicBookstoreSprint.Models.Books>

@{
    ViewData["Title"] = "Store";
}

<h2 class="my-4">Store</h2>

<form asp-action="Index" class="col-2 my-1 p-2">
    <div>
        Filter search
        <div class="my-1">
            <input type="text" name="searchString" placeholder="Title or Author" class="form-control-sm col-12" />
        </div>
        <div class="my-1">
            <div class="d-flex">
                <input type="number" name="minPrice" step="1" placeholder="$Min" class="form-control-sm col-5 mr-1" />
                <span>&#8212;</span>
                <input type="number" name="maxPrice" step="1" placeholder="$Max" class="form-control-sm col-5 ml-1" />
            </div>
        </div>
        <input type="submit" value="Filter" class="btn btn-primary btn-sm" />
        <a asp-action="Index" class="btn btn-secondary btn-sm float-end">Clear</a>
    </div>
</form>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">
                    <img src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)" class="card-img-top card-img-custom " alt="Book Image">
                    <div class="card-body" style="height: 6em;">
                        <h5 class="mb-3">@item.Title</h5>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <span class="card-text">@item.Price.ToString("c")</span>
                        <a href="@Url.Action("AddToCart", "Cart", new { id = item.Id })" class="btn btn-primary store-btn"><i class="fa-solid fa-cart-shopping"></i></a>
                    </div>



                </a>

            </div>
        </div>

    }
</div>
