@model EpicBookstoreSprint.Models.Books

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="mb-4">Book Details</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Book Information</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Language:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Language)</dd>

                        <dt class="col-sm-4">ISBN:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN)</dd>

                        <dt class="col-sm-4">Published Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DatePublished)</dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4">Author:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model?.Id" class="btn btn-primary">Add to Cart</a>
                        <a asp-action="Index" class="btn btn-warning ml-2"><i class="fa-solid fa-arrow-left"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Book Image</h4>
                    <hr />

                    @if (Model.ImageData != null && Model.ImageData.Length > 0)
                    {
                        string imageBase64 = Convert.ToBase64String(Model.ImageData);
                        string imageSrc = $"data:image;base64,{imageBase64}";
                        <img src="@imageSrc" class="img-fluid" alt="Book Image" />
                    }
                    else
                    {
                        <span class="text-muted">No Image Available</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
