@model EpicBookstoreSprint.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edit role";
}

<form method="post" class="row mt-3">
    <div class="col-md-4">
        <div class="form-group row">
            <label asp-for="Id" class="col-form-label col-md-2"></label>
            <input asp-for="Id" disabled class="form-control col-md-9" style="font-size: 0.9em" />

        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-form-label col-md-2"></label>
            <input asp-for="RoleName" class="form-control col-md-9" />
            <span asp-validation-for="RoleName" class="text-danger"></span>

        </div>
        @* <div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="form-group">
            <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fas fa-angle-left"></i> Back</a>
            <button type="submit" class="btn btn-success float-end mr-3">Update <i class="fas fa-check-double"></i></button>
        </div>
    </div>
    <div class="col-md-5">
        <h3>User with @Model.RoleName role</h3>
        <table class="table table-striped col-md-8">
            @if (Model.Users.Any())
            {
                @foreach (var userName in Model.Users)
                {
                    <tr>
                        <td class="form-label">
                            @userName
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="form-label">
                        No users with @Model.RoleName role
                    </td>
                </tr>
            }
        </table>
        <div>
            <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove users in role</a>
        </div>
    </div>
</form>
